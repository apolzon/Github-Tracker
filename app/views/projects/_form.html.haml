= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    = f.label :type
    = f.select :type, options_for_select(Project.select_options, @project.type)
  %fieldset
    = f.label :name
    = f.text_field :name
  %fieldset
    = f.label :url
    = f.text_field :url
  .hidden
    = f.hidden_field :user_id, :value => current_user.id
  .actions
    = f.submit 'Save'
